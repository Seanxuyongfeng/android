<com.android.prospect.MusicListLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
   <FrameLayout 
        android:layout_width="345dp"
        android:layout_marginTop="45dp"
        android:layout_height="wrap_content"
        android:background="@drawable/music_list_background">
   <FrameLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp" >
    <ListView 
        android:layout_width="fill_parent"
        android:layout_height="247dp"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="vertical"
        android:padding="0dp"
        android:scrollbarThumbVertical="@drawable/scrollbar"
        android:scrollbarSize="3dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="45dp"
        android:dividerHeight="10dp"
        android:id="@android:id/list" >
        <!--         android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="45dp" -->
    </ListView>
    </FrameLayout> 
        
    <FrameLayout
        android:id="@+id/progress_bar"
        android:layout_marginTop="204dp"
        android:layout_width="match_parent"
        android:layout_height="123dp">
    
    <ImageView android:id="@+id/animation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@anim/glowworm"/>
    
    <SeekBar android:id="@android:id/progress"
        android:background="#00f5a5a5"
        android:layout_width="232dp"
        android:layout_height="20dip"
        android:layout_marginTop="87dp"
        android:layout_marginLeft="45dp"
        android:progressDrawable="@drawable/seekbar_img" 
        android:thumb="@drawable/seek_thumb"
        android:thumbOffset="0dp"
        android:paddingLeft="0dp" />
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="45dp"
        android:orientation="horizontal">
		    
        <TextView android:id="@+id/current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="#ffffffff"/>
        
        <TextView android:id="@+id/total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:text="04:00"
            android:textColor="#ffffffff"/>
    </LinearLayout>        
    </FrameLayout>   
